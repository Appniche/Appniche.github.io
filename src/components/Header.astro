---
import { Image } from "astro:assets";

//assets
import img1 from "../assets/img/img1-bg.png";
---

<header class="h-[15dvh] flex justify-between items-center px-8">
	<div class="flex justify-center items-center">
		<Image class="rounded-full" src={img1} alt="Company logo" width="90" />
		<span class="text-3xl font-semibold">Appniche Technologie's</span>
	</div>

	<div id="btn" class="cursor-pointer">
		<span class="text-4xl">
			<i class="fa-solid fa-bars"></i>
		</span>
	</div>

	<div
		id="nav_menu"
		class="text-xl bg-transparent w-[60dvh] h-screen fixed z-20 right-0 top-0"
	>
		<div
			id="cls_btn"
			class="cls_btn cursor-pointer fixed z-40 right-7 top-6"
		>
			<span class="text-5xl">
				<i class="fa-solid fa-xmark"></i>
			</span>
		</div>
		<div
			class="inner_cnt text-2xl flex flex-col justify-around items-center font-semibold"
		>
			<div class="flex flex-col gap-4 justify-around items-center">
				<span class="nav_links"><a href="/">Home</a></span>
				<span class="nav_links"><a href="/about">About</a></span>
				<span class="nav_links"><a href="/work">Work</a></span>
			</div>

			<div class="flex flex-col justify-center gap-4">
				<div class="follow_links flex justify-center gap-8">
					<span><i class="fa-brands fa-instagram"></i></span>
					<span><i class="fa-brands fa-github"></i></span>
					<span><i class="fa-brands fa-linkedin"></i></span>
				</div>

				<div class="text-xl">
					<p>&copy; <a href="/">Appniche technologies</a>2023</p>
				</div>
			</div>
		</div>
	</div>
</header>

<style>
	.fa-brands {
		font-size: 38px;
	}
	#nav_menu {
		background-color: rgba(131, 172, 208, 0.6);
		backdrop-filter: blur(8px);
	}
	.inner_cnt {
		gap: 1.5rem;
		height: 100dvh;
	}
	.nav_links {
		background: #000;
		width: 200px;
		padding: 0.5rem;
		text-align: center;
		border-radius: 20px;
	}
	.nav_links:hover {
		color: lightblue;
	}
	span > i:hover {
		color: lightskyblue;
	}
</style>
